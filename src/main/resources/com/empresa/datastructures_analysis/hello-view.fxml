<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.empresa.datastructures_analysis.ClienteController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <TextField fx:id="nombreField" promptText="Nombre"/>
    <TextField fx:id="correoElectronicoField" promptText="Correo Electrónico"/>

    <TableView fx:id="tablaClientes">
        <columns>
            <TableColumn fx:id="columnaNombre" text="Nombre" />
            <TableColumn fx:id="columnaApellido" text="Apellido" />
            <!-- Agrega más columnas según los campos de tus datos -->
        </columns>
    </TableView>

    <Button text="Crear" onAction="#onCrearButtonClick"/>
    <Button text="Leer" onAction="#onLeerButtonClick"/>
    <Button text="Actualizar" onAction="#onActualizarButtonClick"/>
    <Button text="Eliminar" onAction="#onEliminarButtonClick"/>
</VBox>